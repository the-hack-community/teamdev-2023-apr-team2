{
  "name": "teamdev-2023-apr-team2",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,md,json}\" --ignore-path .gitignore",
    "lint": "turbo lint && manypkg check",
    "lint:fix": "turbo lint:fix && manypkg fix",
    "type-check": "turbo type-check",
    "commit": "czg emoji",
    "prepare": "husky install",
    "lint-staged": "lint-staged - config .lintstagedrc"
  },
  "devDependencies": {
    "@cilotta/eslint-config": "^0.1.0",
    "@commitlint/cli": "^17.5.1",
    "@commitlint/types": "^17.4.4",
    "@manypkg/cli": "^0.20.0",
    "@types/eslint": "^8.37.0",
    "@types/prettier": "^2.7.2",
    "commitlint-config-gitmoji": "^2.3.1",
    "cz-git": "^1.6.1",
    "czg": "^1.6.1",
    "eslint": "latest",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.1",
    "prettier": "latest",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "turbo": "latest",
    "typescript": "^5.0.4",
    "validate-branch-name": "^1.3.0"
  },
  "engines": {
    "node": ">=18.15.0",
    "yarn": "please-use-npm",
    "npm": "please-use-npm"
  },
  "volta": {
    "node": "18.15.0"
  },
  "packageManager": "pnpm@8.1.1",
  "pnpm": {
    "overrides": {
      "querystring": "^0.2.1",
      "@npmcli/move-file": "npm:@npmcli/fs@^3.1.0",
      "micromatch": "^4.0.5",
      "uglify-es": "npm:uglify-js@^3.17.4"
    }
  },
  "validate-branch-name": {
    "pattern": "^(main){1}$|^(feature|fix)/.+$",
    "errorMsg": "ブランチ名を確認して下さい"
  }
}
