    "commitlint-config-gitmoji": "^2.3.1",
    "czg": "^1.6.1",
    "eslint": "latest",
    "prettier": "latest",
    "turbo": "latest",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@8.1.1",
  "pnpm": {
    "overrides": {
      "querystring": "^0.2.1",
      "@npmcli/move-file": "npm:@npmcli/fs@^3.1.0",
      "micromatch": "^4.0.5",
      "uglify-es": "npm:uglify-js@^3.17.4"
    }
  }
